<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dip" />
            <solid android:color="#562e7d" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dip" />
            <solid android:color="#562e7d" />
        </shape>
    </item>
    <!-- foreground -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dip" />
            <solid android:color="#6C5FC7" />
            <stroke android:width="1dp" android:color="#33000000" />
        </shape>
    </item>
</selector>